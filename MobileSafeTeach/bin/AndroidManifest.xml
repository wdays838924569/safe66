<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilesafeteach"
    android:versionCode="1"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mobilesafeteach.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HomeActivity"/>
        <activity android:name="com.example.mobilesafeteach.activity.SettingActivity"></activity>
        <activity android:name="com.example.mobilesafeteach.activity.LostAndFindActivity"></activity>
        <activity android:name="com.example.mobilesafeteach.activity.SetUp1Activity"></activity>
        <activity android:name="com.example.mobilesafeteach.activity.SetUp2Activity"></activity>
        <activity android:name="com.example.mobilesafeteach.activity.SetUp3Activity"></activity>
        <activity android:name="com.example.mobilesafeteach.activity.SetUp4Activity"></activity>
    </application>

</manifest>
